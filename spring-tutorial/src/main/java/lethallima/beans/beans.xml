<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" default-init-method="init" default-destroy-method="destroy"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="person" class="lethallima.Person" scope="singleton" init-method="onCreate" destroy-method="onDestroy" factory-method="getInstance">
        <constructor-arg name="id" type="int" value="1337"></constructor-arg>
        <constructor-arg name="name" type="String" value="jeff"></constructor-arg>
        <property name="taxId" value="123"></property>
        <property name="address" ref="address"></property>
    </bean>

    <bean id="person2" class="lethallima.Person" scope="singleton" init-method="onCreate" destroy-method="onDestroy" factory-bean="personfactory" factory-method="createPerson">
        <constructor-arg name="id" type="int" value="31337"></constructor-arg>
        <constructor-arg name="name" type="String" value="jeffrey"></constructor-arg>
        <property name="taxId" value="321"></property>
        <property name="address" ref="address"></property>
    </bean>

    <bean id="address" class="lethallima.Address">
        <constructor-arg name="street" value="Elite St."></constructor-arg>
        <constructor-arg name="postcode" value="31337"></constructor-arg>
    </bean>

    <bean id="address2" class="lethallima.Address" p:street="1338 Fake Street" p:postcode="91340">

    </bean>

    <bean id="personfactory" class="lethallima.PersonFactory">

    </bean>

    <bean id="basket" class="lethallima.FruitBasket">
        <constructor-arg name="name" value="Jeff's Basket"></constructor-arg>
        <constructor-arg>
            <list>
                <value>apple</value>
                <value>banana</value>
                <value>orange</value>
                <value>kiwi</value>
                <value>pear</value>
            </list>
        </constructor-arg>
    </bean>
</beans>